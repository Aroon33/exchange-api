generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  password    String
  name        String
  role        UserRole     @default(USER)
  systemStatus SystemStatus @default(RUNNING)  // ★ これを追加
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  groupId     Int?
  kycRequests KycRequest[]
  tickets     Ticket[]
  transfers   Transfer[]
  group       Group?       @relation(fields: [groupId], references: [id])
  wallet      Wallet?

  @@index([groupId], map: "User_groupId_fkey")
}

model Wallet {
  id               Int     @id @default(autoincrement())
  userId           Int     @unique
  balanceTotal     Decimal @default(0.00000000) @db.Decimal(18, 8)
  balanceAvailable Decimal @default(0.00000000) @db.Decimal(18, 8)
  balanceLocked    Decimal @default(0.00000000) @db.Decimal(18, 8)
  user             User    @relation(fields: [userId], references: [id])
}

model Transfer {
  id        Int            @id @default(autoincrement())
  userId    Int
  type      TransferType
  amount    Decimal        @default(0.00000000) @db.Decimal(18, 8)
  status    TransferStatus @default(PENDING)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  user      User           @relation(fields: [userId], references: [id])

  @@index([userId], map: "Transfer_userId_fkey")
}

model Group {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
}

model KycRequest {
  id            Int      @id @default(autoincrement())
  userId        Int
  status        Int      @default(0)
  documentFront String?
  documentBack  String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id])

  @@index([userId], map: "KycRequest_userId_fkey")
}

model Ticket {
  id        Int             @id @default(autoincrement())
  userId    Int
  title     String
  status    TicketStatus    @default(OPEN)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  user      User            @relation(fields: [userId], references: [id])
  messages  TicketMessage[]

  @@index([userId], map: "Ticket_userId_fkey")
}

model TicketMessage {
  id        Int        @id @default(autoincrement())
  ticketId  Int
  sender    SenderType
  message   String
  createdAt DateTime   @default(now())
  ticket    Ticket     @relation(fields: [ticketId], references: [id])

  @@index([ticketId], map: "TicketMessage_ticketId_fkey")
}

model SystemTemplate {
  id        Int      @id @default(autoincrement())
  name      String
  params    String   @db.LongText
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  ADMIN
  USER
}

enum TransferType {
  DEPOSIT
  WITHDRAW
}

enum SystemStatus {
  RUNNING
  STOP_REQUESTED
  STOPPED
}


enum TransferStatus {
  PENDING
  COMPLETED
  CANCELED
}

enum TicketStatus {
  OPEN
  CLOSED
}

enum SenderType {
  USER
  ADMIN
}
